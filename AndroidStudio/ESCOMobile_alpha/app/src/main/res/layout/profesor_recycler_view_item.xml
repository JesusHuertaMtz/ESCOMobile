<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		<variable
			name="profesor"
			type="com.example.master.escomobile_alpha.modelo.entidad.Profesor" />
	</data>
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<ImageView
			android:id="@+id/profesor_foto"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginBottom="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:contentDescription="@string/hint_profesores"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@mipmap/ic_launcher_round" />
		
		<TextView
			android:id="@+id/nombre_profesor"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="16dp"
			android:paddingTop="10dp"
			android:text="@string/hint_profesores"
			android:textSize="18sp"
			app:layout_constraintBottom_toBottomOf="@+id/profesor_foto"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/profesor_foto"
			app:layout_constraintTop_toTopOf="@+id/profesor_foto" />
	</android.support.constraint.ConstraintLayout>
</layout>